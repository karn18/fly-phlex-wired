<%= turbo_frame_tag "notes" do %>
  <% if @notes.size == 0 %>
    <div class="rounded-lg bg-indigo-300 w-full md:w-1/2 lg:w-1/2 mx-auto">
      <%= image_tag "no_data.webp", decoding: "async", loading: "lazy" %>
    </div>
  <% else %>
    <div class="grid grid-cols-2 gap-4 mx-auto gap-x-3 w-full md:w-2/3 lg:w-2/3">
      <% @notes.each do |note| %>
        <%= render note %>
      <% end %>
    </div>
  <% end %>
<% end %>
